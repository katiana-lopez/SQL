--What tech companies offer at least 14 PTO days?
SELECT company_name, paid_time_off_days
FROM fortune_companies
ORDER BY paid_time_off_days desc;

--Does the tenure of each company match the PTO?
SELECT company_name, avg_employee_tenure, paid_time_off_days,
CASE WHEN avg_employee_tenure>=6 AND paid_time_off_days >=14 THEN "Great ratio"
	 WHEN avg_employee_tenure>=3 AND paid_time_off_days >=12 THEN "Good ratio"
     WHEN avg_employee_tenure<=2 AND paid_time_off_days >=8 THEN "Probably not..."
     ELSE "Stay away."
     END AS PTO_to_tenure
 FROM fortune_companies
 ORDER BY PTO_to_tenure;
 
--What companies offer healthcare benefits with the most maternity leave?
SELECT company_name, maternity_leave_weeks
FROM fortune_companies
ORDER BY maternity_leave_weeks desc;

--Whats the tenure comparison with tech and retail companies?
SELECT industry, AVG(avg_employee_tenure)
FROM fortune_companies
WHERE industry IN("Technology", "Retail")
GROUP BY industry;


--What industries offer at least 3 months of maternity leave?
SELECT AVG(maternity_leave_weeks) AS avg_maternity_leave, industry
FROM fortune_companies
GROUP BY industry
HAVING avg_maternity_leave > 12;
